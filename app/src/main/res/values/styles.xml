<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textViewDefault">
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="drawableTint">@color/dark_primary</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="textViewBold">
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="textShowPublication">
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/dark_primary</item>
        <item name="submitBackground">@color/dark_primary</item>
        <item name="android:textColor">@color/dark_primary</item>
        <item name="textColorSearchUrl">@color/dark_primary</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
    </style>

</resources>